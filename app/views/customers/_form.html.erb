<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control width_40' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :desc, class: 'form-control width_40 resize' %>
  </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email, class: 'form-control width_40' %>
    </div>
    <div class="field">
      <%= f.label "Customer Service Group" %><br>
      <%= f.select :csrg, [ "G1", "G2","G3" ] %>
      <!--f.select(:year, [1,2,3,4,5,6], {:include_blank => "Select"})-->
    </div>
  <div class="field">
    <%= f.label "Active" %>
    <%= f.check_box :status %>
  </div>
  <div class="actions">
    <%= f.submit "Create Customer", class: "btn btn-success" %>
  </div>
<% end %>
