<% unless @tickets.blank? %>
<h1>Service Requests</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Problem Summary</th>
      <th>Problem Description</th>
      <th>Requester</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= truncate(ticket.title, :length => 28) %></td>
        <td><%= truncate(ticket.description, :length => 40) %></td>
        <td><%= ticket.requester ? ticket.requester.name : "" %></td>
        <td><%= ticket.status %></td>
        <td><%= ticket.priority %></td>
        <td><%= ticket.user ? ticket.user.name : "" %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Ticket', new_ticket_path, class: "btn btn-success" %>
